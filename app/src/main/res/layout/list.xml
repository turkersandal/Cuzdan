<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="50sp"
                                             android:background="#f2f2f2"

>

    <TextView
            android:text="TextView"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#262626"
            android:id="@+id/txtAd" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.028"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011"/>
    <TextView
            android:text="TextView"
            android:layout_width="95dp"
            android:layout_height="48dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/txtPara" app:layout_constraintStart_toEndOf="@+id/txtAd"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintVertical_bias="0.04000002"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@drawable/trash"
            android:id="@+id/btnSil" app:layout_constraintStart_toEndOf="@+id/txtPara"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintVertical_bias="0.017"/>
    <Button
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:background="@drawable/edit"
            android:id="@+id/btnEdit" app:layout_constraintEnd_toStartOf="@+id/btnSil" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/txtPara" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintVertical_bias="0.024"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:id="@+id/textViewLstTotal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSil" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>